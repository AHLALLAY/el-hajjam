# ========== Application Configuration ==========
NODE_ENV=development
PORT=3000
API_VERSION=v1

# ========== MongoDB Database ==========
MONGODB_URI=mongodb://localhost:27017/db_name
# For MongoDB Atlas, use:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/db_name?retryWrites=true&w=majority

# ========== JWT Authentication ==========
# Generate JWT secrets using this command:
# Node.js: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# ========== Security ==========
BCRYPT_SALT_ROUNDS=10
# Generate SESSION_SECRET using the same command as JWT secrets
SESSION_SECRET=your-session-secret-key-change-this-in-production


# ========== CORS (Cross-Origin Resource Sharing) ==========
CORS_ORIGIN=http://localhost:5173
# In production, specify your domain:
# CORS_ORIGIN=https://your-domain.com

# ========== Rate Limiting ==========
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========== Logging ==========
LOG_LEVEL=debug
# Options: error, warn, info, debug

# ========== Admin Credentials ==========
ADMIN_EMAIL=your_admin_email
ADMIN_PASSWORD=your_admin_password